/**
 * 16-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 * else out does not change
 */

CHIP Register {
    IN in[16], load;
    OUT out[16];

    PARTS:
    Mux16(a=lastOut, b=in, sel=load, out=muxOut);
    DFF16(in=muxOut, out=lastOut, out=out);
}
